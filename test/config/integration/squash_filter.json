{
  "listeners": [
    {
      "address": "tcp://{{ ip_loopback_address }}:0",
      "bind_to_port": true,
      "filters": [
        {
          "type": "read",
          "name": "http_connection_manager",
          "config": {
            "codec_type": "auto",
            "stat_prefix": "ingress_http",
            "route_config": {
              "virtual_hosts": [
                {
                  "name": "backend",
                  "domains": ["*"],
                  "routes": [
                    {
                      "prefix": "/",
                      "cluster": "upstream"
                    }
                  ]
                }
              ]
            },
            "access_log": [
              {
                "path": "/dev/null"
              }
            ],
            "filters": [
              {
                "type": "decoder",
                "name": "envoy.squash",
                "config": {
                  "cluster" : "squash",
                  "attachment_template": {"spec": {"match_request": true,"attachment" : { "env": "{{ SQUASH_ENV_TEST }}"  }}},
                  "attachment_timeout_ms" : 100,
                  "attachment_poll_period_ms": 1000,
                  "request_timeout_ms": 100
                }
              },
              {
                "type": "decoder",
                "name": "router",
                "config": {}
              }
            ]
          }
        }
      ]
    }
  ],
  "admin": {
    "access_log_path": "/dev/null",
    "address": "tcp://{{ ip_loopback_address }}:0"
  },
  "cluster_manager": {
    "clusters": [
      {
        "name": "squash",
        "connect_timeout_ms": 5000,
        "type": "static",
        "lb_type": "round_robin",
        "hosts": [
          {"url": "tcp://{{ ip_loopback_address }}:{{ upstream_squash }}"}
        ]
      },
      {
        "name": "upstream",
        "connect_timeout_ms": 5000,
        "type": "static",
        "lb_type": "round_robin",
        "hosts": [
          {"url": "tcp://{{ ip_loopback_address }}:{{ upstream }}"}
        ]
      }
    ]
  }
}
